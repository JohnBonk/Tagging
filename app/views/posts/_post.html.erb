<%= div_for post do %>
<div class= "small-12 medium-6 large-4 columns" id="posts">
  <div class="post-tile mt pt">
    <strong><%= link_to post.author, post_path(post.author) %></strong><br />
    <sup class="text-muted">From <%= time_ago_in_words(post.created_at)%></sup><br />
    <div class="mb pb">
      <%= h(post.content) %>
    </div>
    <div class="tags">
      <%=raw tag_links(post.all_tags)%>
    </div>

  </div>
</div>
<% end %>

